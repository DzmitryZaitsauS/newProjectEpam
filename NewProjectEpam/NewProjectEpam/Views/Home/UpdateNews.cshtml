@model IEnumerable<NewProjectEpam.Models.myTable.MyTableNews>
@{
    ViewBag.Title = "Редактирование новости";
}

<h2>Редактирование новости</h2>


@using (Html.BeginForm("SaveNews", "Home"))
                {
  
    foreach (var item in Model)
    {
     <div>   
         <strong class="Mystrong">
             Название новости
         </strong><br>
             @Html.TextBox("name_news", @item.name_news, htmlAttributes: new { @class = "text_box", data_ajax = "true" })
         <br>
             <strong class="Mystrong">
                 Категория
             </strong><br>
                 @Html.TextBox("typess", @item.typess, htmlAttributes: new { @class = "text_box", data_ajax = "true" })
         <br>

                 <strong class="Mystrong">
                     Содержание
                 </strong><br>
                     @Html.TextArea("content", @item.content, 10, 200, null)
         <br>
         
                     <strong class="Mystrong">
                         URL-изображения 
                         </strong><br>
                         @Html.TextBox("img", @item.image, htmlAttributes: new { @class = "text_box", data_ajax = "true" })
         <br>

                         @Html.TextBox("id_news", @item.Id_news, htmlAttributes: new { @class = "visible_false" })
         <br>
         <input type="submit" value="Сохранить" class="btn btn-success" />
</div>


     
                   
                   
                    
                }
          

}




